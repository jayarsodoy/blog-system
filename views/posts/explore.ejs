  <div class="main-content">
    <div class="posts-container">
        <% if (typeof user === 'undefined' || !user) { %> 
            <div class="posts-header">
                <h1 class="page-title">Explore All Posts</h1>
                <p class="page-subtitle">Discover amazing articles from our community of writers.</p>
            </div>
        <% } %>

      <!-- Filter Section -->
      <div style="margin-bottom: 2rem; display: flex; gap: 1rem; flex-wrap: wrap;">
        <button class="btn btn-primary" data-filter="all">All Posts</button>
        <button class="btn btn-secondary" data-filter="tutorial">Tutorial</button>
        <button class="btn btn-secondary" data-filter="opinion">Opinion</button>
        <button class="btn btn-secondary" data-filter="guide">Guide</button>
        <button class="btn btn-secondary" data-filter="news">News</button>
      </div>

      <!-- Posts Grid -->
 
        <% if (posts && posts.length > 0) { %>
            <div class="posts-grid">
                <% posts.forEach(post => { %>
                    <article class="post-card">
                        <div class="post-card-header">
                            <h2 class="post-title">
                                <a href="/posts/view/<%= post.id %>/<%= user ? user.id : 'guest' %>" class="post-link"><%= post.title %></a>
                                <p class="post-category"> <%= post.category.charAt(0).toUpperCase() + post.category.slice(1) %></p>
                            </h2>
                            <p class="post-meta">
                                By <span class="author-name"><%= post.author_username %></span> 
                                ‚Ä¢ <time datetime="<%= post.created_at %>"><%= new Date(post.created_at).toLocaleDateString() %></time>
                            </p>
                        </div>
                        
                        <p class="post-excerpt"><%= post.content.substring(0, 150) %>...</p>
                        
                        <div class="post-card-footer">
                            <div class="post-stats">
                                <span class="stat">üí¨ <%= post.comment_count || 0 %> Comments</span>
                                <% if (post.likes_count) { %>
                                    <span class="stat">‚ù§Ô∏è <%= post.likes_count %> Likes</span>
                                <% } %>
                            </div>
                            <a href="/posts/view/<%= post.id %>/<%= user ? user.id : 'guest' %>" class="btn btn-secondary btn-sm">Read More</a>
                        </div>
                    </article>
                <% }); %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <p class="empty-icon">üì≠</p>
                <h2>No posts yet</h2>
                <p>Be the first to share your thoughts!</p>
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/posts/create" class="btn btn-primary">Create First Post</a>
                <% } else { %>
                    <a href="/auth/login" class="btn btn-primary">Sign in to create a post</a>
                <% } %>
            </div>
        <% } %>
    </div>
</div>
