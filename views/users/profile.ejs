<div class="profile-container">
    <div class="profile-header">
        <div class="profile-info">
            <h1 class="profile-username">ğŸ‘¤ <%= user.username %></h1>
            <p class="profile-email"><%= user.email %></p>
            <p class="profile-joined">
                Member since 
                <%= posts.length > 0 
                    ? new Date(posts[0].date_joined).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) 
                    : 'Unknown' %>
            </p>
        </div>
        <div class="profile-stats">
            <div class="stat-card">
                <span class="stat-number"><%= posts.length %></span>
                <span class="stat-label">Posts</span>
            </div>
            <div class="stat-card">
                <span class="stat-number"><%= comments.length %></span>
                <span class="stat-label">Comments</span>
            </div>
        </div>
    </div>

    <div class="profile-content">
        <div class="profile-section">
            <div class="section-header">
                <h2 class="section-title">ğŸ“ Your Posts</h2>
                <a href="/posts/create" class="btn btn-primary btn-sm">New Post</a>
            </div>

            <% if (posts && posts.length > 0) { %>
                <div class="posts-list">
                    <% posts.forEach(post => { %>
                        <div class="post-item">
                            <div class="post-item-header">
                                <h3 class="post-item-title">
                                    <a href="/posts/view/<%= post.id %>/<%= user ? user.id : 'guest' %> " class="post-link"><%= post.title %></a>
                                </h3>
                                <span class="post-date"><%= new Date(post.created_at).toLocaleDateString() %></span>
                            </div>
                            <p class="post-item-excerpt"><%= post.content.substring(0, 100) %>...</p>
                            <div class="post-item-actions">
                                <a href="/posts/edit/<%= post.id %>" class="btn btn-secondary btn-xs">Edit</a>
                                <form method="POST" action="/posts/delete/<%= post.id %>" style="display: inline;">
                                    <button type="submit" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure?')">Delete</button>
                                </form>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <p class="empty-icon">ğŸ“­</p>
                    <p>You haven't created any posts yet.</p>
                    <a href="/posts/create" class="btn btn-primary">Create Your First Post</a>
                </div>
            <% } %>
        </div>

        <div class="profile-section">
            <h2 class="section-title">ğŸ’¬ Your Comments</h2>
            <% if (comments && comments.length > 0) { %>
                <div class="comments-list">
                    <% comments.forEach(comment => { %>
                        <div class="comment-item">
                            <p class="comment-text"><%= comment.content %></p>
                            <p class="comment-meta">
                                On post: <a href="/posts/view/<%= comment.id %>/<%= user.id %>" class="comment-post-link"><%= comment.title %></a>
                                â€¢ <%= new Date(comment.created_at).toLocaleDateString() %>
                            </p>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p class="empty-message">You haven't commented yet.</p>
            <% } %>
        </div>
    </div>
</div>

